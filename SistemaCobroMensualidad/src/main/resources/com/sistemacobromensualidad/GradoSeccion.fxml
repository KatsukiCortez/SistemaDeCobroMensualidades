<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" prefHeight="180.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistemacobromensualidad.ControladorGradoSeccion">
   <children>
      <Label layoutX="29.0" layoutY="41.0" text="Grado:" />
      <Label layoutX="29.0" layoutY="82.0" text="Sección:" />
      <Group layoutX="80.0" layoutY="41.0">
         <children>
            <ButtonBar>
               <buttons>
                  <HBox>
                     <children>
                        <RadioButton fx:id="Grado1" mnemonicParsing="false" selected="true" text="1°">
                           <toggleGroup>
                              <ToggleGroup fx:id="Grado" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="Grado2" mnemonicParsing="false" text="2°" toggleGroup="$Grado" />
                        <RadioButton fx:id="Grado3" mnemonicParsing="false" text="3°" toggleGroup="$Grado" />
                        <RadioButton fx:id="Grado4" mnemonicParsing="false" text="4°" toggleGroup="$Grado" />
                        <RadioButton fx:id="Grado5" mnemonicParsing="false" text="5°" toggleGroup="$Grado" />
                        <RadioButton fx:id="Grado6" mnemonicParsing="false" text="6°" toggleGroup="$Grado" />
                     </children>
                  </HBox>
               </buttons>
            </ButtonBar>
         </children>
      </Group>
      <ButtonBar layoutX="80.0" layoutY="82.0">
         <buttons>
            <HBox>
               <children>
                  <RadioButton fx:id="SecciA" mnemonicParsing="false" selected="true" text="A">
                     <toggleGroup>
                        <ToggleGroup fx:id="Seccion" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="SecciB" mnemonicParsing="false" text="B" toggleGroup="$Seccion" />
                  <RadioButton fx:id="SecciC" mnemonicParsing="false" text="C" toggleGroup="$Seccion" />
                  <RadioButton fx:id="SecciD" mnemonicParsing="false" text="D" toggleGroup="$Seccion" />
               </children>
            </HBox>
         </buttons>
      </ButtonBar>
      <Button layoutX="230.0" layoutY="125.0" mnemonicParsing="false" onAction="#handleConfirmar" text="Confirmar" />
      <Button layoutX="312.0" layoutY="125.0" mnemonicParsing="false" onAction="#handleVolver" text="Volver" />
   </children>
</AnchorPane>
